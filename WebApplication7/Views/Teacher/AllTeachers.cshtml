@model IEnumerable<WebApplication7.Models.Teacher>

@{
    ViewData["Title"] = "AllTeachers";
}

<h2>AllTeachers</h2>

<form method="post" >
    <div>
        <input type="text" id="SearchByName" name="SearchByName" value="SearchByName">
    </div>
    <div>
        <input type="text" id="SearchByEmail" name="SearchByEmail" value="SearchByEmail">
    </div>
    <div><input type="submit"  name="Search"></div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experiance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfirmPassword)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Experiance)
            </td>
            <td>
              <img src="@item.Image">
            </td>
            <td>
              <a class="btn btn-danger"href="/Teacher/DownloadCv?path=@item.Cv">DownloadCv</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConfirmPassword)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditTeacher", new {id=item.Id }) |
                @Html.ActionLink("Details", "DetailsTeacher", new {id=item.Id}) |
                @Html.ActionLink("Delete", "DeleteTeacher", new {id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
