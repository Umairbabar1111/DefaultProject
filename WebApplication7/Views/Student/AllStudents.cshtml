@model IEnumerable<WebApplication7.Models.Student>

@{
    ViewData["Title"] = "AllStudents";
}

<h2>AllStudents</h2>
<form method="post">
    <div>
        <input type="text" id="SearchByName" name="SearchByName" placeholder="SearchByName" />
    </div>
    <div>
        <input type="text" id="SearchByEmail" name="SearchByEmail" placeholder="SearchByEmail" />
    </div>
   <div>
       <input type="submit" value="Search"/>
   </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rollno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfirmPassword)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rollno)
            </td>
            <td>
                <img src="@item.Image" />
            </td>
            <td>
               <a class="btn btn-danger" id="/Student/DownloadCv?path=@item.Id">DownloadCv</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConfirmPassword)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditStudent", new {id=item.Id}) |
                @Html.ActionLink("Details", "DetailsStudent", new {id=item.Id}) |
                @Html.ActionLink("Delete", "DeleteStudent", new {id=item.Id})
            </td>
        </tr>
}
    </tbody>
</table>
<a class="btn btn-success"asp-action="Student"><span class="glyphicon glyphicon-arrow-up"></span>CreateNewStudent</a>